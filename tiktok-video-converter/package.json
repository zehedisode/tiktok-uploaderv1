{
  "name": "youtube-to-tiktok",
  "version": "2.0.0-dev",
  "description": "YouTube videolarını TikTok formatına (9:16) dönüştüren modern masaüstü uygulaması - Çoklu metin katmanları, 8 hazır preset ve canlı önizleme ile!",
  "main": "electron/main.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/youtube-to-tiktok",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/youtube-to-tiktok.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/youtube-to-tiktok/issues"
  },
  "keywords": [
    "youtube",
    "tiktok",
    "video",
    "converter",
    "9:16",
    "shorts",
    "ffmpeg",
    "electron",
    "desktop"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win --x64",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "dist": "npm run build:win"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.4",
    "lucide-react": "^0.294.0",
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.youtubetotiktok.app",
    "productName": "YouTube to TikTok Converter",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*",
      "electron/binaries/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "YouTube-TikTok-Converter-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YouTube to TikTok"
    },
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    }
  }
}
